<section class='form-section'>
    <div class="form-group">
        <div class='instructions'>
            <p class='instructions__url'>
                <pre>https://www.goodreads.com/user/show/<span class='highlighted'>this-is-your-user</span></pre>
            </p>
        </div>
        <form class='form' action="/random" method="GET">
            <label for="user">
                <input type='text' name="user" id="user" placeholder="7777777-joe">
            </label>
            <button class='btn btn--submit'>
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24" fill="none"
                    stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10" />
                    <path d="M12 8l4 4-4 4M8 12h7" /></svg>
            </button>
        </form>
    </div>
</section>